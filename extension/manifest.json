{
  "manifest_version": 3,
  "name": "AI Usage Tracker",
  "version": "1.0",
  "description": "Track your AI tool usage across Gemini, Claude, and Perplexity.",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "host_permissions": [
    "http://localhost/*",
    "http://localhost:5000/*",
    "http://127.0.0.1/*",
    "http://127.0.0.1:5000/*",
    "*://chat.openai.com/*",
    "*://chatgpt.com/*",
    "*://claude.ai/*",
    "*://gemini.google.com/*",
    "*://copilot.github.com/*",
    "*://www.perplexity.ai/*",
    "https://github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*",
        "*://claude.ai/*",
        "*://gemini.google.com/*",
        "*://copilot.github.com/*",
        "*://www.perplexity.ai/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
