{
  "manifest_version": 3,
  "name": "AI Usage Tracker",
  "version": "1.0",
  "description": "Track your AI tool usage",
  "permissions": ["storage", "tabs", "activeTab"],
  "host_permissions": [
    "*://chatgpt.com/*",
    "*://chat.openai.com/*",
    "*://claude.ai/*",
    "*://gemini.google.com/*",
    "*://copilot.github.com/*",
    "*://www.perplexity.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chatgpt.com/*",
        "*://chat.openai.com/*",
        "*://claude.ai/*",
        "*://gemini.google.com/*",
        "*://copilot.github.com/*",
        "*://www.perplexity.ai/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}